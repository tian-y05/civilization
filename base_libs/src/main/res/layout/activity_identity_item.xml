<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15">

        <TableRow
            android:background="@color/dialog_gray"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_0_5"
            android:paddingRight="@dimen/dp_0_5"
            android:paddingTop="@dimen/dp_0_5">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_24"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="right|center"
                android:paddingRight="@dimen/dp_10"
                android:text="@string/name"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_24"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="3"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="@string/password_forget"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />
        </TableRow>

        <TableRow
            android:background="@color/dialog_gray"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_0_5"
            android:paddingRight="@dimen/dp_0_5">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_24"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="right|center"
                android:paddingRight="@dimen/dp_10"
                android:text="@string/sex"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_24"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="3"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="@string/password_forget"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />
        </TableRow>

        <TableRow
            android:background="@color/dialog_gray"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_0_5"
            android:paddingRight="@dimen/dp_0_5">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_24"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="right|center"
                android:paddingRight="@dimen/dp_10"
                android:text="@string/identity_card_number"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_card_number"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_24"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="3"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="@string/password_forget"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />
        </TableRow>

        <TableRow
            android:background="@color/dialog_gray"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_0_5"
            android:paddingRight="@dimen/dp_0_5">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_24"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="right|center"
                android:paddingRight="@dimen/dp_10"
                android:text="@string/tel_number"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_tel"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_24"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="3"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="@string/password_forget"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />
        </TableRow>

        <TableRow
            android:background="@color/dialog_gray"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_0_5"
            android:paddingRight="@dimen/dp_0_5">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_24"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="right|center"
                android:paddingRight="@dimen/dp_10"
                android:text="@string/volunteer_account"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_24"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="3"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="@string/password_forget"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />
        </TableRow>

        <TableRow
            android:background="@color/dialog_gray"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_0_5"
            android:paddingLeft="@dimen/dp_0_5"
            android:paddingRight="@dimen/dp_0_5">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_24"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="right|center"
                android:paddingRight="@dimen/dp_10"
                android:text="@string/area"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_24"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="3"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="@string/password_forget"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_alignRight="@+id/table"
        android:layout_alignTop="@+id/table"
        android:scaleType="fitXY"
        android:src="@mipmap/identity_select" />
</RelativeLayout>