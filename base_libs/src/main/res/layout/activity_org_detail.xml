<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/action_bar_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_125"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_30"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:src="@mipmap/author_default" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_9"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="星级信息"
                    android:textColor="@color/text_black_color"
                    android:textSize="@dimen/sp_12" />

                <com.wmsj.baselibs.view.RatingBar
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_17"
                    app:starCount="5"
                    app:starEmpty="@drawable/star_normal"
                    app:starFill="@drawable/star_select"
                    app:starImageSize="@dimen/dp_16"
                    app:starPadding="@dimen/dp_6"
                    app:starStep="0"
                    app:stepSize="Full" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="志愿编号"
                    android:textColor="@color/text_black_color"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_org_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textColor="@color/color_gray_text"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15">

        <TableRow
            android:background="@color/border_gray"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_0_5"
            android:paddingRight="@dimen/dp_0_5"
            android:paddingTop="@dimen/dp_0_5">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_46"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="1"
                android:background="@color/under_line"
                android:gravity="center"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_46"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="1"
                android:background="@color/under_line"
                android:gravity="center"
                android:text="总计"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_46"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="1"
                android:background="@color/under_line"
                android:gravity="center"
                android:text="参与本组织"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="1"
                android:background="@color/under_line"
                android:gravity="center"
                android:paddingRight="@dimen/dp_10"
                android:text="最近参与组织活动时间"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />

        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_94"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_94"
                android:layout_weight="3"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:background="@color/border_gray"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_0_5"
                    android:paddingRight="@dimen/dp_0_5">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_0_5"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_15"
                        android:text="服务时长"
                        android:textColor="@color/text_black_color"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_time_all"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_0_5"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:textColor="@color/text_black_color"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_time_join"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_0_5"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:textColor="@color/text_black_color"
                        android:textSize="@dimen/sp_12" />

                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:background="@color/border_gray"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_0_5"
                    android:paddingRight="@dimen/dp_0_5">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_0_5"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_15"
                        android:text="参与活动数"
                        android:textColor="@color/text_black_color"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_acts_all"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_0_5"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:textColor="@color/text_black_color"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_acts_this"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_0_5"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:textColor="@color/text_black_color"
                        android:textSize="@dimen/sp_12" />
                </TableRow>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/layout_border"
                android:gravity="center"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>


    </TableLayout>

    <TextView
        android:id="@+id/tv_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_18"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/sp_14" />


    <TextView
        android:id="@+id/tv_zjlb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_zjhm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/sp_14" />


    <TextView
        android:id="@+id/tv_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_zzmm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_fwsj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_fwdx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/sp_14" />

</LinearLayout>