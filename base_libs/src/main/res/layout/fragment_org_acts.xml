<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_15"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/shape_corner_before"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12">

                </TextView>


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/text_black_color"
                    android:textSize="@dimen/sp_17" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:src="@mipmap/activity_loaction" />

                <TextView
                    android:id="@+id/tv_org"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/password_forget"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:src="@mipmap/activity_place" />

                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/password_forget"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:src="@mipmap/recruit_time" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/password_forget"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_statu"
            android:layout_width="@dimen/dp_113"
            android:layout_height="@dimen/dp_86"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/rejected"
            android:visibility="gone" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/under_line" />

    <LinearLayout
        android:id="@+id/ll_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.wmsj.baselibs.view.DrawableCenterTextView
            android:id="@+id/tv_publish"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/org_publish"
            android:drawablePadding="@dimen/dp_3"
            android:gravity="center_vertical"
            android:text="@string/acts_publish"
            android:textColor="@color/acts_publish"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />

        <com.wmsj.baselibs.view.DrawableCenterTextView
            android:id="@+id/tv_back_reason"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/org_reason"
            android:drawablePadding="@dimen/dp_3"
            android:gravity="center_vertical"
            android:text="@string/back_reason"
            android:textColor="@color/acts_check"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/under_line" />

        <com.wmsj.baselibs.view.DrawableCenterTextView
            android:id="@+id/tv_edit"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/org_edit"
            android:drawablePadding="@dimen/dp_3"
            android:gravity="center_vertical"
            android:text="@string/edit"
            android:textColor="@color/acts_edit"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/under_line" />

        <com.wmsj.baselibs.view.DrawableCenterTextView
            android:id="@+id/tv_delete"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/acts_delete"
            android:drawablePadding="@dimen/dp_3"
            android:gravity="center_vertical"
            android:text="@string/delete"
            android:textColor="@color/acts_delete"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_recruit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_recruit_num"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_number"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_recruit_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_11"
                android:text="@string/activity_number"
                android:textColor="@color/tab_select"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/under_line" />

        <LinearLayout
            android:id="@+id/ll_pending_trial"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pending_trial"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_pending_trial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_11"
                android:text="@string/pending_trial"
                android:textColor="@color/tab_select"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/under_line" />


        <LinearLayout
            android:id="@+id/ll_employ_member"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/employ_member"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_11"
                android:src="@mipmap/my_org" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_going"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_join_num"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_of_applicants"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_join_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_11"
                android:text="@string/activity_number"
                android:textColor="@color/tab_select"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/under_line" />

        <LinearLayout
            android:id="@+id/ll_acts_photo"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_pic"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_acts_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_11"
                android:text="@string/pending_trial"
                android:textColor="@color/tab_select"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/under_line" />

        <LinearLayout
            android:id="@+id/ll_supplement_time"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/supplement_time"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_11"
                android:src="@mipmap/supplement_time" />
        </LinearLayout>

        <View
            android:id="@+id/view_supple"
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/under_line" />

        <LinearLayout
            android:id="@+id/ll_acts_report"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_report"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_acts_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_11"
                android:text="@string/activity_report"
                android:textColor="@color/tab_select"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@color/under_line" />

        <com.wmsj.baselibs.view.DrawableCenterTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:drawableLeft="@mipmap/back_draft"
            android:drawablePadding="@dimen/dp_3"
            android:gravity="center_vertical"
            android:text="@string/back_draft"
            android:textColor="@color/acts_delete"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

</LinearLayout>