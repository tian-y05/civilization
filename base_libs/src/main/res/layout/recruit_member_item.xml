<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_83"
    android:layout_margin="@dimen/dp_10">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_toRightOf="@+id/iv_logo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="孟文博（男）"
            android:textColor="@color/home_model"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:text="报名日期：2017-12-12"
            android:textColor="@color/text_recruit"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:text="所在地：中华门社区"
            android:textColor="@color/text_recruit"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_25"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_corner_red"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:text="@string/cancel_sign" />

    <LinearLayout
        android:id="@+id/ll_wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_employment"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/shape_corner_ing"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:text="@string/employment" />

        <TextView
            android:id="@+id/tv_refuse"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_corner_draft"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:text="@string/refuse" />
    </LinearLayout>
</RelativeLayout>