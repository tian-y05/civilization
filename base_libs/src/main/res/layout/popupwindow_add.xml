<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_7"
        android:background="@drawable/popwindow_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/re_chatroom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_18"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/pop_chat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:gravity="center_vertical"
                android:text="@string/private_chat"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/re_addfriends"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_18"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/pop_group" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:gravity="center_vertical"
                android:text="@string/group_chat"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_16" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/re_scanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_18"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/pop_add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:gravity="center_vertical"
                android:text="@string/add_contacts"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_16" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>