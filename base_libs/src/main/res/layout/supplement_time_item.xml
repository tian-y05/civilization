<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_itemview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_11"
    android:background="@drawable/layout_border"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:scaleType="fitXY"
            android:src="@mipmap/author_default" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_toRightOf="@+id/iv_logo"
            android:text=""
            android:textColor="@color/text_black_color"
            android:textSize="@dimen/sp_15" />


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_12"
            android:text=""
            android:textColor="@color/text_black_color"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_1"
        android:stretchColumns="0,1,2,3">

        <TableRow
            android:background="@color/border_gray"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_0_5"
            android:paddingRight="@dimen/dp_0_5"
            android:paddingTop="@dimen/dp_0_5">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_46"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="1"
                android:background="@color/under_line"
                android:gravity="center"
                android:text="@string/sign_in_time"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_46"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="1"
                android:background="@color/under_line"
                android:gravity="center"
                android:text="@string/sign_out_time"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="1"
                android:background="@color/under_line"
                android:gravity="center"
                android:text="@string/this_time"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_46"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="1"
                android:background="@color/under_line"
                android:gravity="center"
                android:text="@string/service_state"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_46"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="1"
                android:background="@color/under_line"
                android:gravity="center"
                android:text="@string/operation"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />
        </TableRow>

        <TableRow
            android:background="@color/border_gray"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_0_5"
            android:paddingRight="@dimen/dp_0_5">

            <TextView
                android:id="@+id/tv_sign_in_time"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_sign_out_time"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_service_time"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />


            <TextView
                android:id="@+id/tv_state"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_12" />

            <RelativeLayout
                android:id="@+id/tv_enter"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_0_5"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_corner_red"
                    android:paddingBottom="@dimen/dp_3"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:paddingTop="@dimen/dp_3"
                    android:text="@string/time_enter"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />


            </RelativeLayout>
        </TableRow>

    </TableLayout>

</LinearLayout>